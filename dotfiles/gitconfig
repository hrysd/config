[user]
  name  = Hiroshi Yoshida
[core]
  editor = vim
  excludesfile = ~/.gitignore
  pager = delta
[color]
  ui = auto
[alias]
  ba = branch -a
  br = branch
  cb = checkout -b
  ch = checkout
  ci = commit
  cv = commit -v
  dc = diff --cached
  df = diff
  g  = grep -n
  l  = log --stat --date=iso --pretty=format:'%Cred%h %Cgreen%ad %Cblue%cn %Creset%s %C(auto)%d%Creset'
  lp = log -p --stat --date=iso --pretty=format:'%Cred%h %Cgreen%ad %Cblue%cn %Creset%s %C(auto)%d%Creset'
  rt = remote
  rv = remote -v
  st = status
[pull]
  rebase = false
[credential]
  helper = store
[ghq]
  root = ~/src
[delta]
  line-numbers = true
  side-by-side = true
[include]
  path = ~/.gitconfig.local
[includeIf "gitdir:~/src/github.com/"]
  path = ~/src/github.com/.gitconfig
[init]
	defaultBranch = main
